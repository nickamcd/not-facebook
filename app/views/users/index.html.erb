<h2>People</h2>

<% (@possible_friends).each do |u| %>
  <div class="container border-top border-dark">
    <%= link_to user_path(u) do %>
      <%= image_tag user_avatar(u, 30), class: "rounded-circle" %> <strong><%= u.full_name %></strong>
    <% end %>
  </div>
<% end %>

<% unless @received_requests.empty? %>
  <h3>friend requests</h3>
  <div class="container">
    <% @received_requests.each do |u| %>
      <%= link_to user_path(u) do %>
        <em><%= u.full_name %></em>
      <% end %>
      <%= link_to accept_user_friendships_path(u), method: :get do %>
        <div class="btn btn-success">Accept</div>
      <% end %>
      <%= link_to deny_user_friendships_path(u), method: :get do %>
        <div class="btn btn-danger">Deny</div>
      <% end %>
    <% end %>
  </div>
<% end %>

<% unless @friends.empty? %>
  <h3>friends</h3>
  <% @friends.each do |f| %>
    <%= link_to user_path(f) do %>
      <em><%= f.full_name %> </em>
    <% end %>
  <% end %>
<% end %>